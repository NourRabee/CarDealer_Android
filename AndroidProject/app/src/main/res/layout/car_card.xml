<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:layout_goneMarginBottom="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="146dp">


        <TextView
            android:id="@+id/carName"
            android:layout_width="196dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="178dp"
            android:clickable="true"
            android:foregroundGravity="top"
            android:gravity="left|center"
            android:text="Car Manufacturer"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carPrice"
            android:layout_width="43dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/carName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="47dp"
            android:gravity="left|center"
            android:text="$0000"
            android:textColor="#221F1F"
            android:textSize="14sp" />

        <Button
            android:id="@+id/reserveButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="274dp"
            android:layout_marginBottom="3dp"
            android:text="Book Now"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:cornerRadius="16sp" />

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="171dp"
            android:layout_height="115dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            app:srcCompat="@drawable/jeep" />

        <TextView
            android:id="@+id/yearCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="303dp"
            android:layout_marginBottom="39dp"
            android:text="TextView"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/favoriteClick"
            android:layout_width="21dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="361dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="118dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/favorite_border" />

        <ImageButton
            android:id="@+id/color4"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/redLine4"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/red_line"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/color1"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/redLine1"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/red_line"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/color3"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/redLine3"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/red_line"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/color2"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/redLine2"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/red_line"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/carPriceAfterOffer"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="57dp"
            android:layout_marginBottom="67dp"
            android:text="$0000"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="43dp"
            app:srcCompat="@drawable/baseline_calendar_today_24" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="69dp"
            app:srcCompat="@drawable/baseline_attach_money_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="42dp"
            app:srcCompat="@drawable/rating" />

        <TextView
            android:id="@+id/carRating"
            android:layout_width="31dp"
            android:layout_height="17dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="41dp"
            android:text="0.0"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
