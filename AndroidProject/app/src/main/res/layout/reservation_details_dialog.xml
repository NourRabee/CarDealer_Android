<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reservedBy"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Name of the Renter"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reservedByViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offers"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Email"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manufacture"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Manufacturer"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manufacturerViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/model"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Model"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/year"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Year"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yearViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reservedColor"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reservedColorReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Reservation Price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reserveDate"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text="Reservation Date-Time"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reserveDateViewReserveDetails"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
