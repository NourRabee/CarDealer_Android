<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/manufacture"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Manufacturer"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/manufacturerViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/model"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Model"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/year"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Year"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yearViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/miles"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Distance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/milesViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Price"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/offers"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Offers"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/offersViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/power"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Horse Power"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/powerViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seating"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:text=" Seating Capacity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seatingViewReserve"
                android:layout_width="173dp"
                android:layout_height="48dp"
                android:gravity="left|center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="77dp"
            android:layout_marginBottom="-15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelReserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/confirmReserve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="Confirm" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
